                android:textColor="#000"
                app:layout_constraintLeft_toRightOf="@+id/tv_sale1"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="title" />

            <TextView
                android:id="@+id/tv_sale1"
                android:layout_width="60px"
                android:layout_height="30px"
                android:layout_marginLeft="10px"
                android:background="#ff1100"
                android:includeFontPadding="false"
                android:text="SALE"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_field1" />

            <TextView
                android:id="@+id/tv_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_sale1"
                app:layout_constraintRight_toRightOf="@id/tv_sale1"
                app:layout_constraintTop_toBottomOf="@id/tv_sale1"
                tools:text="price" />

            <TextView
                android:id="@+id/tv_salePrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title1"
                tools:text="$ price" />

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#40000000"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price1" />

            <TextView
                android:id="@+id/tv_origin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="6sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_sale1"
                app:layout_constraintRight_toRightOf="@id/tv_sale1"
                app:layout_constraintTop_toBottomOf="@id/divider1"
                tools:text="origin" />

            <TextView
                android:id="@+id/tv_company1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="6sp"
                app:layout_constraintLeft_toLeftOf="@id/tv_sale1"
                app:layout_constraintRight_toRightOf="@id/tv_sale1"
                app:layout_constraintTop_toBottomOf="@id/tv_origin1"
                tools:text="company" />

            <ImageView
                android:id="@+id/iv_barCode1"
                android:layout_width="100px"
                android:layout_height="20px"
                android:layout_marginTop="4px"
                android:layout_marginRight="20px"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

            <TextView
                android:id="@+id/tv_barCode1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:includeFontPadding="false"
                android:textAlignment="center"
                android:textSize="5sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/iv_barCode1"
                app:layout_constraintRight_toRightOf="@id/iv_barCode1"
                tools:text="barcode" />


        </androidx.constraintlayout.widget.ConstraintLayout>

